  extends base.pug

block content
    h4 Update Story
    form(method="POST")
        input(name="title", placeholder="Story Title", value=story.title, required)
        input(placeholder="Description", required, type="text", name="description", minlength=20, value=story.description)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=story.hashtags.join())
        input(value="Save",type="submit")