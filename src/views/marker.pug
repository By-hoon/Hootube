Doctype
html(lang="ko")
    head 
        title #{pageTitle} | hoonap
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        div(id="map" style="width:100%;height:100%;")
        script(src="https://dapi.kakao.com/v2/maps/sdk.js?appkey=d9355f267cb6b45d2ef37bfcfa4f4a02&libraries=services,clusterer,drawing")
        script.
            function makeMarker(mouseEvent){
                var latlng = mouseEvent.latLng; 
                var markerLat = latlng.getLat();
                var markerLng = latlng.getLng(); 
            }
            function init(){
                var mapContainer = document.getElementById('map'), 
                mapOption = { 
                    center: new kakao.maps.LatLng(36.33929480377198, 127.39343696623958),
                    level: 7
                };
                var map = new kakao.maps.Map(mapContainer, mapOption); 
                kakao.maps.event.addListener(map, 'click', makeMarker);
            };
            init();
                        